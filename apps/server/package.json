    "eslint": "catalog:",
    "jimp": "catalog:",
    "pino-pretty": "catalog:",
    "rimraf": "catalog:",
    "tsdown": "^0.20.3",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@babylonjs/core": "catalog:",
    "@babylonjs/loaders": "catalog:",
    "@colyseus/core": "catalog:",
    "@colyseus/monitor": "catalog:",
    "@colyseus/playground": "catalog:",

  "description": "Colyseus game server for MMO",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node dist/index.mjs",
    "dev": "tsdown --watch --onSuccess \"node dist/index.mjs\"",
    "build": "tsdown",
    "generate:heightmap": "tsx scripts/generate-heightmap.ts",
    "generate:navcat": "tsx scripts/generate-navcat.ts",
    "generate:navcat:glb": "tsx scripts/generate-navcat-glb.ts",
    "loadtest": "tsx loadtest/example.ts --room my_room --numClients 2",
    "test": "vitest run --config vitest.config.ts",
    "clean": "rimraf dist",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "license": "UNLICENSED",
